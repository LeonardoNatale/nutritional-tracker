{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"declaration": false,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": false,
		"importHelpers": true,
		"incremental": true,
		"lib": ["es2021"],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"paths": {
			"@api/infra/*": ["src/api/infrastructure/*"],
			"@libs/*": ["src/libs/*"],
			"src/*": ["src/*"]
		},
		"removeComments": true,
		"resolveJsonModule": true,
		"rootDir": ".",
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"target": "ES2020"
	}
}
